/**index.wxss**/
.flowerImage{
	width: 100%;
	height: 450rpx;
	/* overflow: hidden; */
}
.flowerImage image{
	width: 100%;
	height: 100%;
}
.description{
	margin:0 10rpx;
}
.title{
	text-align: center;
	margin: 10rpx 0;
	font-size: 34rpx;
	font-weight: bold;
}
.text{
	text-indent: 2em;
	font-size: 32rpx;
}
.photoImage{
	width: 50rpx;
	height: 50rpx;
}
.photoImage image{
	width: 100%;
	height: 100%;
}
.btn{
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	margin: 20rpx auto;
}
.btnGroup{
	position: absolute;
	left: 50%;
	bottom: 2%;
	transform: translate(-50%, 0);
}