/* pages/queryResults/queryResults.wxss */
Page{
	background-color: #F1F1F1;
}
.content{
	margin: 15rpx;
}
.flowerImage{
	width: 100%;
	height: 450rpx;
	border-radius: 10rpx;
	overflow: hidden;
}
.flowerImage image{
	width: 100%;
	height: 100%;
}
.title{
	font-size: 35rpx;
	font-weight: bold;
}
.introduction{
	display: flex;
	flex-direction: row;
}
.resultItem{
	background-color: white;
	margin: 20rpx 0;
	border-radius: 10rpx;
	padding: 20rpx;
}
.resultImage{
	width: 250rpx;
	height: 160rpx;margin-right: 10rpx;
}
.resultImage image{
	width: 250rpx;
	height: 160rpx;
}
.rightText{
	height: 125rpx;
	font-size: 32rpx;
	overflow: hidden;
}
.tip{
	display: flex;
	flex-direction: row;
	font-size: 28rpx;
	/* font-weight: bold; */
}
.similarity{
	color: #BC6972;
	background-color: #FDDAD8;
	padding: 3rpx 10rpx;
	border-radius: 25rpx;
}
.detail{
	color: #639966;
	background-color: #c7eeca;
	margin-left: 30rpx;
	padding: 3rpx 10rpx;
	border-radius: 25rpx;
}
