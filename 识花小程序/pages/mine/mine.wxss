Page{
	background-color: #F1F1F1;
}

.content{
	margin: 15rpx;
}
.recordItem{
	background-color: white;
	margin: 20rpx 0;
	border-radius: 10rpx;
	padding: 20rpx;
	display: flex;
	flex-direction: row;
}
.recordImage{
	width: 300rpx;
	height: 200rpx;margin-right: 10rpx;
}
.recordImage image{
	width: 300rpx;
	height: 200rpx;
}
.btnGroup{
	display: flex;
	flex-direction: column;
	margin-left: 100rpx;
}
.btn{
	display: flex;
	flex-direction: row;
	justify-content: space-evenly;
	align-items: center;
	margin: 20rpx auto;
}
.photoImage{
	width: 50rpx;
	height: 50rpx;
}
.photoImage image{
	width: 100%;
	height: 100%;
}
.btn1{
	background-color: #d6f7d9;
	border-radius: 30rpx;
	padding:5rpx 10rpx;
}
.btn2{
	background-color: #FDDAD8;
	border-radius: 30rpx;
	padding:5rpx 10rpx;
}
.lookText{
	color: #07C160;
	margin: 10rpx;
	
	font-size: 32rpx;
}
.deleteText{
	color: #FE0000;
	margin: 10rpx;
	font-size: 32rpx;
}
