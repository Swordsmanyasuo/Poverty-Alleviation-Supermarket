/**index.wxss**/
page {
  box-sizing: border-box;
  padding: 0 40rpx;
  height: 100vh;
  background-color: #f8f8f8;
}
.userInfo{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 30rpx 30rpx;
  height: 100rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.userInfo .info{
  display: flex;
  align-items: center;
}
.userInfo .info .avatar{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-color: #e7e7e7;
}
.userInfo .info .avatar image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.userInfo .info .nickname{
  margin-left: 20rpx;
  font-weight: bold;
}
.userInfo .btn{
  border: #59c06e solid 1px;
  width: 150rpx;
  border-radius: 20rpx;
  color: #59c06e;
  font-size: 16px;
  text-align: center;
  font-weight: normal;
}
.title{
  font-weight: bold;
  height: 100rpx;
  line-height: 100rpx;
}
.mybox{
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}
.editbox{
  margin-top: 20rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}
.utilbox{
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}
.footerbox{
  margin: 40rpx auto;
  width: 350rpx;
  display: flex;
  justify-content: space-around;
  color: #475680;
}

.item{
  width: 100%;
  box-sizing: border-box;
  padding: 50rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}
.item text{
  margin-top: 20rpx;
}
.item image{
  display: block;
  width: 30px;
  height:30px;
}